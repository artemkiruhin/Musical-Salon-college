@page
@model MusicalSalon.Application.Pages.Genres.AddModel

<h2>Create Genre</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Genre.Name"></label>
        <input asp-for="Genre.Name" class="form-control" />
        <span asp-validation-for="Genre.Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
