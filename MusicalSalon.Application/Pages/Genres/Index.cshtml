@page
@model MusicalSalon.Application.Pages.Genres.IndexModel

<h2>Genres</h2>

<p>
    <a asp-page="Add">Добавить</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="Index" asp-route-sortOrder="id">Id</a>
            </th>
            <th>
                <a asp-page="Index" asp-route-sortOrder="name">Название</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model.Genres)
        {
            <tr>
                <td>@genre.Id</td>
                <td>@genre.Name</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@genre.Id">Изменить</a> |
                    <form method="post" asp-route-id="@genre.Id" asp-page-handler="Delete">
                        <button type="submit" class="text-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
