@page
@model MusicalSalon.Application.Pages.Genres.EditModel

<h2>Edit Genre</h2>

<form method="post">
    <input type="hidden" asp-for="Genre.Id" />

    <div class="form-group">
        <label asp-for="Genre.Name"></label>
        <input asp-for="Genre.Name" class="form-control" />
        <span asp-validation-for="Genre.Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
