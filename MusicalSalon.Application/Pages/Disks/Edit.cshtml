@page
@model MusicalSalon.Application.Pages.Disks.EditModel

<h2>Изменения Диска</h2>

<form method="post">
    <input type="hidden" asp-for="Disk.Id" />

    <div class="form-group">
        <label>Название песни</label>
        <select asp-for="Disk.SongName" name="Disk.SongName" class="form-control">
            <option value="">Выберите песню</option>
            @foreach (var song in Model.Songs)
            {
                <option value="@song.Id">@song.Title</option>
            }
        </select>
        <span class="text-danger">

        </span>
    </div>
    <div class="form-group">
        <label asp-for="Disk.Title">Название</label>
        <input asp-for="Disk.Title" class="form-control" />
        <span asp-validation-for="Disk.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Disk.Price">Цена</label>
        <input asp-for="Disk.Price" class="form-control" />
        <span asp-validation-for="Disk.Price" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Изменить</button>
</form>
