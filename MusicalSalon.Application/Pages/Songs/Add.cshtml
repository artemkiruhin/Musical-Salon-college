@page
@model MusicalSalon.Application.Pages.Songs.AddModel

<h2>Create Song</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Song.Title"></label>
        <input asp-for="Song.Title" class="form-control" />
        <span asp-validation-for="Song.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Song.MusicianName"></label>
        <input asp-for="Song.MusicianName" class="form-control" />
        <span asp-validation-for="Song.MusicianName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Song.GenreName"></label>
        <input asp-for="Song.GenreName" class="form-control" />
        <span asp-validation-for="Song.GenreName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Song.ReleaseYear"></label>
        <input asp-for="Song.ReleaseYear" class="form-control" />
        <span asp-validation-for="Song.ReleaseYear" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
