@page
@model MusicalSalon.Application.Pages.Songs.AddModel

<h2>Create Song</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Song.Title"></label>
        <input asp-for="Song.Title" class="form-control" />
        <span asp-validation-for="Song.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Song.MusicianId"></label>
        <input asp-for="Song.MusicianId" class="form-control" />
        <span asp-validation-for="Song.MusicianId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Song.GenreId"></label>
        <input asp-for="Song.GenreId" class="form-control" />
        <span asp-validation-for="Song.GenreId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Song.ReleaseYear"></label>
        <input asp-for="Song.ReleaseYear" class="form-control" />
        <span asp-validation-for="Song.ReleaseYear" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
