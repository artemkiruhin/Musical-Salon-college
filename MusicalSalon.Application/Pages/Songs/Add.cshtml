@page
@model MusicalSalon.Application.Pages.Songs.AddModel

<h2>Добавление песни</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Song.Title">Название</label>
        <input asp-for="Song.Title" class="form-control" />
        <span asp-validation-for="Song.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Исполнитель</label>
        <select asp-for="Song.MusicianName" name="Song.MusicianName" class="form-control">
            <option value="">Выберите исполнителя</option>
            @foreach (var musician in Model.Musicians)
            {
                <option value="@musician.Id">@musician.Name</option>
            }
        </select>
        <span class="text-danger">

        </span>
    </div>

    <div class="form-group">
        <label>Жанр</label>
        <select asp-for="Song.GenreName" name="Song.GenreName" class="form-control">
            <option value="">Выберите жанр</option>
            @foreach (var genre in Model.Genres)
            {
                <option value="@genre.Id">@genre.Name</option>
            }
        </select>
        <span class="text-danger">

        </span>
    </div>

    <div class="form-group">
        <label asp-for="Song.ReleaseYear"></label>
        <input asp-for="Song.ReleaseYear" class="form-control" />
        <span asp-validation-for="Song.ReleaseYear" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Добавить</button>
</form>
