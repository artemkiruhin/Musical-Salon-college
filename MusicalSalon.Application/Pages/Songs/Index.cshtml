@page
@model MusicalSalon.Application.Pages.Songs.IndexModel

<h2>Songs</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="Index" asp-route-sortOrder="id">ID</a>
            </th>
            <th>
                <a asp-page="Index" asp-route-sortOrder="title">Title</a>
            </th>
            <th>
                <a asp-page="Index" asp-route-sortOrder="musicianName">Musician Name</a>
            </th>
            <th>
                <a asp-page="Index" asp-route-sortOrder="genreName">Genre Name</a>
            </th>
            <th>
                <a asp-page="Index" asp-route-sortOrder="releaseYear">Release Year</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var song in Model.Songs)
        {
            <tr>
                <td>@song.Id</td>
                <td>@song.Title</td>
                <td>@song.MusicianName</td>
                <td>@song.GenreName</td>
                <td>@song.ReleaseYear</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@song.Id">Edit</a> |
                    <form method="post" asp-route-id="@song.Id" asp-page-handler="Delete">
                        <button type="submit" class="text-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
