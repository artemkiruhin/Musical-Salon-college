@page
@model MusicalSalon.Application.Pages.Songs.IndexModel

<h2>Песни</h2>
<p>
    <a asp-page="Add">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="Index" asp-route-sortOrder="id">Id</a>
            </th>
            <th>
                <a asp-page="Index" asp-route-sortOrder="title">Название</a>
            </th>
            <th>
                <a asp-page="Index" asp-route-sortOrder="musicianName">Испонитель</a>
            </th>
            <th>
                <a asp-page="Index" asp-route-sortOrder="genreName">Жанр</a>
            </th>
            <th>
                <a asp-page="Index" asp-route-sortOrder="releaseYear">Год релиза</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var song in Model.Songs)
        {
            <tr>
                <td>@song.Id</td>
                <td>@song.Title</td>
                <td>@song.MusicianName</td>
                <td>@song.GenreName</td>
                <td>@song.ReleaseYear</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@song.Id">Изменить</a> |
                    <form method="post" asp-route-id="@song.Id" asp-page-handler="Delete">
                        <button type="submit" class="text-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
