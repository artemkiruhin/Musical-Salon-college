@page
@model MusicalSalon.Application.Pages.Sales.IndexModel

<h2>Sales</h2>

<p>
    <a asp-page="Add">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="Index" asp-route-sortOrder="id">@Html.DisplayNameFor(model => model.Sales.First().Id)</a>
            </th>
            <th>
                <a asp-page="Index" asp-route-sortOrder="diskName">@Html.DisplayNameFor(model => model.Sales.First().DiskName)</a>
            </th>
            <th>
                <a asp-page="Index" asp-route-sortOrder="saleDate">@Html.DisplayNameFor(model => model.Sales.First().SaleDate)</a>
            </th>
            <th>
                <a asp-page="Index" asp-route-sortOrder="quantity">@Html.DisplayNameFor(model => model.Sales.First().Quantity)</a>
            </th>
            <th>
                <a asp-page="Index" asp-route-sortOrder="fullPrice">@Html.DisplayNameFor(model => model.Sales.First().FullPrice)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model.Sales)
        {
            <tr>
                <td>@sale.Id</td>
                <td>@sale.DiskName</td>
                <td>@sale.SaleDate</td>
                <td>@sale.Quantity</td>
                <td>@sale.FullPrice</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@sale.Id">Edit</a> |
                    <form method="post" asp-route-id="@sale.Id" asp-page-handler="Delete">
                        <button type="submit" class="text-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
