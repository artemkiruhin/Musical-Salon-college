@page
@model MusicalSalon.Application.Pages.Sales.IndexModel

<h2>Продажи</h2>

<p>
    <a asp-page="Add">Добавить</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="Index" asp-route-sortOrder="id">Id</a>
            </th>
            <th>
                <a asp-page="Index" asp-route-sortOrder="diskName">Диск</a>
            </th>
            <th>
                <a asp-page="Index" asp-route-sortOrder="saleDate">Дата</a>
            </th>
            <th>
                <a asp-page="Index" asp-route-sortOrder="quantity">Количество</a>
            </th>
            <th>
                <a asp-page="Index" asp-route-sortOrder="fullPrice">Полная цена</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model.Sales)
        {
            <tr>
                <td>@sale.Id</td>
                <td>@sale.DiskName</td>
                <td>@sale.SaleDate</td>
                <td>@sale.Quantity</td>
                <td>@sale.FullPrice</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@sale.Id">Изменить</a> |
                    <form method="post" asp-route-id="@sale.Id" asp-page-handler="Delete">
                        <button type="submit" class="text-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
