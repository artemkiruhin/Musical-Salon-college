@page
@model MusicalSalon.Application.Pages.Sales.AddModel

<h2>Create Sale</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Sale.Diskid"></label>
        <input asp-for="Sale.Diskid" class="form-control" />
        <span asp-validation-for="Sale.Diskid" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sale.SaleDate"></label>
        <input asp-for="Sale.SaleDate" type="date" class="form-control" />
        <span asp-validation-for="Sale.SaleDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sale.Quantity"></label>
        <input asp-for="Sale.Quantity" class="form-control" />
        <span asp-validation-for="Sale.Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sale.FullPrice"></label>
        <input asp-for="Sale.FullPrice" class="form-control" />
        <span asp-validation-for="Sale.FullPrice" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
