@page
@model MusicalSalon.Application.Pages.Musicians.IndexModel

<h2>Музыканты</h2>

<p>
    <a asp-page="Add">Добавить</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="Index" asp-route-sortOrder="id">Id</a>
            </th>
            <th>
                <a asp-page="Index" asp-route-sortOrder="name">Псевдоним</a>
            </th>
            <th>
                <a asp-page="Index" asp-route-sortOrder="careerYear">Год начала карьеры</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var musician in Model.Musicians)
        {
            <tr>
                <td>@musician.Id</td>
                <td>@musician.Name</td>
                <td>@musician.CareerYear</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@musician.Id">Изменить</a> |
                    <form method="post" asp-route-id="@musician.Id" asp-page-handler="Delete">
                        <button type="submit" class="text-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
